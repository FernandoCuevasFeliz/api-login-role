{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-console": "off",
    "object-curly-newline": "off",
    "no-unused-vars": "off",
    "no-undef": "off",
    "arrow-parens": "off",
    "comma-dangle": "off",
    "operator-linebreak": "off",
    "no-useless-return": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "no-shadow": "off",
    "no-unreachable": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "mjs": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never",
        ".d.ts": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts", ".json", ".d.ts"]
      }
    }
  }
}
